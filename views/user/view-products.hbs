<header>
    <div class="container header-container">
        <div class="header-left">
            <h5>#1 trending</h5>
            <h1>Apple iPhone 14 Pro Max </h1>
            <p>Apple iPhone 14 Pro Max 128 GB (Deep Purple, 6 GB RAM)</p>
            <!-- <a href="products.html" class="btn btn-primary">productS</a> -->
            <span class="btn-flip"><a href="products.html"></a></span>
        </div>
        <div class="header-right">
            <div class="header-right-img">
                <img src="/images/iphone14.png" alt="HEADER IMAGE">
            </div>
        </div>
    </div>
</header>

<section class="products">
    <h2>LATEST ADDED PRODUCTS</h2>
    <div class="container products-container">
        {{#each slicedProducts}}
        <article class="product">
            <a href='/product?id={{this._id}}'>
                <div class="product-image">
                    <img src="/product-images/{{this._id}}.png" alt="">
                </div>
            </a>
            <div class="product-info">
                <a href='/product?id={{this._id}}'>
                    <div class="product-info-title">
                        <h4>{{this.Company}} {{this.Name}} ({{this.RAM}} GB RAM, {{this.ROM}} GB Storage)</h4>
                        <h4 class="mrp">MRP : ₹ {{this.cPrice}} <span>₹ {{this.mPrice}}</span></h4>
                    </div>
                </a>
            </div>
            <div class="cart">
                {{#if this.cart}}
                <button class="cartIcon{{this._id}}"><img src="/icons/shopping-cart (1).png" alt=""></button>
                {{else}}
                <button class="cartIcon{{this._id}}" onclick="addToCart('{{this._id}}','{{../user._id}}')"><img
                        src="/icons/shopping-cart.png" alt=""></button>
                {{/if}}
            </div>
        </article>
        {{/each}}
    </div>
</section>


