
<section class="contact login-form">
        <div class="container contact-container">
            <h2>Login</h2>
            {{#if loginErr}}
                    <p class="error">{{loginErr}}</p>
                {{/if}}
            <form class="contact-form" id="submit-form" action="/login" method="post">
                <input type="email" name="Email" placeholder="Your Email Address" required>
                <input type="password" name="Password" placeholder="Password" required>
                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="/signup"><h5>Don't have an account? <span style="color: var(--color-primary);">Create one!</span></h5></a>
            </form>
        </div>
</section>