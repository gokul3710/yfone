
<section>
    <div class="container">
        <div >
            <a href="/admin/add-product" class="btn" >Add Product</a>
        </div>
        <table style="margin-top: 5rem;" >
            {{#if products}}
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            {{/if}}
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.cPrice}}</td>
                    <td>{{this.Company}} {{this.Name}} smartphone. Features {{this.Display}}â€³ display,<br> {{this.ROM}} GB storage, {{this.RAM}} GB RAM</td>
                    <td><img style="width: 100px;" src="/product-images/{{this._id}}.png" alt="img"></td>
                    <td>
                        <a href="/admin/edit-product?id={{this._id}}" class="btn btn-primary mt-1">Edit</a>
                        <a href="/admin/delete-product?id={{this._id}}" class="btn btn-danger mt-1" onclick=" return confirm('Are you sure you want to delete {{this.Name}}?')">Delete</a>
                    </td>
                </tr>
                
                {{/each}}
            </tbody>
        </table>
    </div>
</section>